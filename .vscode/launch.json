    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug simple_on_off_light",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/simple_on_off_light/simple_on_off_light",
            "args": ["10.1.1.21", "1883", "hass", "hemmeligpassord"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "sourceFileMap":{
                "": "<target-path>"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "",
            "logging": {
                "trace": false,
                "traceResponse": false,
                "engineLogging": false,
                "programOutput": false,
                "exceptions": false
            },
